@{
    ViewBag.Title = "学车时间段管理";
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}
@section Head{
    <script src="~/Content/scripts/plugins/tab/jquery.idTabs.min.js"></script>
    <script>
        var objectid = request('objectId');//对象id      
        $(function () {
            BindDataByObjectId(objectid);
        });

        function BindDataByObjectId(objectid) {
            $.SetForm({
                url: "/QX360Manage/StudyTimeTable/GetStudyTimeTableJson",
                param: { objectid: objectid },
                success: function (data) {                   
                        AddWorkTime(data);                  
                }
            });
        }
        
        //创建时间元素
        function AddWorkTime(data) {
            var currentday;
            //定义变量
            var len = data.length;
            var i = 0;           
            $("#timeContent").empty();
            var content = "";
            content += '  <div>';
            content += '<div id="time_panel" class="timepanel"></div>';
            content += '<div style="padding:10px;">';
            content += ' <a class="btn btn-default" rel="add" onclick=AddTime() title="添加时间段">+添加</a>';
            content += '</div>';
            content += '</div>';
            $("#timeContent").append(content);
            //创建方法
            var createTimeItem = function () {
               
                var li = "";
                var item = data[i];
                if (item) {
                    CallBack(item.WorkTimeTableId, item.StartTime, item.EndTime, item.TimeType);
                }
                i++;//更新循环变量
                if (i < len) {
                    createTimeItem();
                }
            }
            //第一次调用
            createTimeItem();
          
        }
        //添加时间
        function AddTime() {           
            dialogOpen({
                id: "addtime",
                title: '新增时间段',
                url: '/QX360Manage/StudyTimeTable/AddTime',
               width: "1000px",height: "600px",
               
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        }
        //子类对调方法
        function CallBack(id,time1, time2, status) {
            var text = "";
            var css = "btn btn-yellow";
            if (status == "@((int)QX360.Model.Enums.WorkTimeType.白班)") {
                css = "btn btn-blue";
            } else {
              
            }
            var a = '<a class="'+css+'" style="position:relative" data-id="'+id+'" data-type="' + status + '" data-start="' + time1 + '" data-end="' + time2 + '">' + time1 + "-" + time2;
            a += '<i class="" style="position: absolute;right: -2px;;top: -5px;background:url(/content/images/close.png);width:16px;height:16px;">&nbsp;&nbsp;&nbsp;&nbsp;</i>';
            a += '</a>';
            $("#time_panel").append(a);
            //绑定删除事件
            $("#time_panel a").each(function () {
                $(this).find("i").bind("click", function () {
                    var $parent = $(this).parent();
                    var keyValue = $parent.attr("data-id");
                    $parent.remove();
                    if (keyValue) {
                        $.RemoveForm({
                            url: "/QX360Manage/StudyTimeTable/RemoveForm",
                            param: { keyValue: keyValue },
                            success: function (data) {
                              
                            }
                        })
                    } 
                   
                })
            })
        }

        //保存
        function AcceptClick() {
            var postData = [];
            $("#time_panel a").each(function () {
                var $time = $(this);
                var worktime = {};
                worktime["WorkTimeTableId"] = $time.attr("data-id");
                worktime["SchoolId"] = objectid;
                worktime["StartTime"] = $time.attr("data-start");
                worktime["EndTime"] = $time.attr("data-end");
                worktime["TimeType"] = $time.attr("data-type");
                worktime["SortNum"] = $time.index();
                postData.push(worktime);
            });
            $.SaveForm({
                url: "/QX360Manage/StudyTimeTable/SaveForm?keyValue=" + objectid,
                param: { json: JSON.stringify(postData) },
                loading: "正在保存数据...",
                success: function () {
                    $.currentIframe().$("#gridTable").trigger("reloadGrid");
                }
            })
        }
    </script>
}
