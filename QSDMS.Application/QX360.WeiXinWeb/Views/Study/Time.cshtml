                <!--/ko-->
            </div>
        </div>
        <div style="height:60px"></div>
        <div class="Dtle_footer"><button type="button" class="Dtle_btn" id="DtBtn" data-bind="click:function(){$root.CreateOrder();}">确认</button></div>
